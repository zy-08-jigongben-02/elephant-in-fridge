4. #include <iostream>
using namespace std;

void swap(int& x, int& y) {
    int temp = x;
    x = y;
    y = temp;
}

void swap(int* x, int* y) {
    if (x != nullptr && y != nullptr) {  
        int temp = *x;
        *x = *y;
        *y = temp;
    }
}

int main() {
    int a, b;
    cout << "测试引用交换：" << endl;
    cout << "请输入两个整数: ";
    cin >> a >> b;
    cout << "交换前: a = " << a << ", b = " << b << endl;
    swap(a, b);  
    cout << "交换后: a = " << a << ", b = " << b << endl << endl;

    cout << "测试指针交换：" << endl;
    cout << "请输入两个整数: ";
    cin >> a >> b;
    cout << "交换前: a = " << a << ", b = " << b << endl;
    swap(&a, &b);  // 
    cout << "交换后: a = " << a << ", b = " << b << endl;
    return 0;
}
