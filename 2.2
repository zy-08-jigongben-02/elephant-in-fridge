#include <iostream>
#include <cstring>
using namespace std;

int countVowels(const char* p) {
    int count = 0;
    if (p == nullptr) return 0;  
    while (*p != '\0') {
        char c = *p;
        
        if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
            count++;
        }
        p++;  
    }
    return count;
}
int main()
{
    char str[100];
    cout << "请输入一行字符";
    cin.getline(str, 100);
    int vowelCount = countVowels(str);
    cout << "字符串中元音字母的个数为: " << vowelCount << endl;
}
